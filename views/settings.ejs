<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Basic Styles for Error and Success Messages */
        .error-message {
            color: red;
            margin-top: 5px;
        }

        .success-message {
            color: green;
            margin-top: 5px;
        }
    </style>
</head>

<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Settings</h1>
            <a href="#" onclick="goBack()" class="btn btn-secondary">Back</a>
        </div>

        <!-- Profile Picture Section -->
        <div class="card shadow-lg border-0 rounded-lg mb-4">
            <div class="card-body">
                <h4 class="card-title">Profile Picture</h4>
                <form id="profilePictureForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="profilePicture" class="form-label">Upload Profile Picture</label>
                        <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*" />
                    </div>
                    <button type="submit" id="uploadProfilePictureBtn" class="btn btn-primary">Upload</button>
                    <div id="profilePicturePreview" class="mt-3">
                        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="img-fluid rounded-circle" width="150" height="150" />
                    </div>
                    <div id="profilePictureError" class="error-message"></div>
                    <div id="profilePictureSuccess" class="success-message"></div>
                </form>
            </div>
        </div>

        <!-- Username Section -->
        <div class="card shadow-lg border-0 rounded-lg mb-4">
            <div class="card-body">
                <h4 class="card-title">Username</h4>
                <form id="editUsernameForm">
                    <div class="form-group">
                        <label for="newUsername" class="form-label">New Username</label>
                        <input type="text" class="form-control" id="newUsername" name="newUsername" required value="<%= user.username %>" />
                    </div>
                    <button type="submit" id="editUsernameBtn" class="btn btn-primary">Update Username</button>
                    <div id="usernameError" class="error-message"></div>
                    <div id="usernameSuccess" class="success-message"></div>
                </form>
            </div>
        </div>

        <!-- Email Section -->
        <div class="card shadow-lg border-0 rounded-lg mb-4">
            <div class="card-body">
                <h4 class="card-title">Email</h4>
                <form id="editEmailForm">
                    <div class="form-group">
                        <label for="newEmail" class="form-label">New Email</label>
                        <input type="email" class="form-control" id="newEmail" name="newEmail" required value="<%= user.email %>" />
                    </div>
                    <button type="submit" id="editEmailBtn" class="btn btn-primary">Update Email</button>
                    <div id="emailError" class="error-message"></div>
                    <div id="emailSuccess" class="success-message"></div>
                </form>
            </div>
        </div>
    </div>

    <!-- Go back function -->
    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    <!-- Script includes -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>
